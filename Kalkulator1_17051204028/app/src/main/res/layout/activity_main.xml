<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView android:layout_width="match_parent"
              android:layout_height="80sp"
              android:textColor="#000000"
              android:maxLines="1"
              tools:layout_editor_absoluteX="0dp"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/tvExp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="80sp"
              android:textColor="#000000"
              android:maxLines="1"
              android:id="@+id/tvResult"
              tools:layout_editor_absoluteX="0dp"
              app:layout_constraintTop_toBottomOf="@+id/tvExp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvResult"
            android:orientation="horizontal"
            android:id="@+id/line1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="50dp">

        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cvCE" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="CE"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/ce"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cvBK"
                android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/openBracket"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cvTK"
                android:onClick="onClick">


            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/closeBracket"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/cvBagi"
                android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/divide"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line1"
            android:orientation="horizontal"
            android:id="@+id/line2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp">


        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv7" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/seven"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv8" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/eight"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv9" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/nine"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cvKali" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/multiply"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            android:orientation="horizontal"
            android:id="@+id/line3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp">


        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv4" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/four"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv5" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/five"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv6" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/six"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cvKurang" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/minus"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line3"
            android:orientation="horizontal"
            android:id="@+id/line4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp">
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv1" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/one"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv2" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/two"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv3" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/three"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cvTambah" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/plus"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line4"
            android:orientation="horizontal"
            android:id="@+id/line5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="3dp"
            android:layout_marginStart="3dp">


        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cvTitik" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/dot"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cv0" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/zero"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cvBackSpace" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/backSpace"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="75dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="5dp" android:id="@+id/cvEqual" android:onClick="onClick">
            <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/equal"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>